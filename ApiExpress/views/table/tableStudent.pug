table.table.table-bordered.table-hover
    thead
        tr
            th STT
            th MSSV 
            th Họ và tên  
            th Số điện thoại
            th Ngày sinh
            th Địa chỉ
            th Email
            th Giới tính
            th
    tbody#tbodyTableStudent
        if students.length <=0        
            tr
                td(colspan='9' style='text-align: center;') Không có sinh viên nào.
        else
            each item in students
                tr
                    td #{STT=STT+1}
                    td #{item.mssv}
                    td #{item.name}
                    td #{item.phone}
                    td #{item.birthday}
                    td #{item.address}
                    td #{item.email}
                    td #{item.sex==1?'Nam':'Nữ'}
                    td
                        button.btn.btn-success(type='button' onclick='editStudent('+item.id+')' data-toggle='tooltip' data-target='' title='Sửa Danh Mục')
                            i.far.fa-edit 
                        button.btn.btn-danger(type='button' title='Xóa Danh Mục' onclick='deleteStudent('+item.id+')')
                            i.far.fa-trash-alt
#paginateStudent.row.float-right
    if pageCount>=1
        if !search
            if  currentPage>1
                button.btn.page-item(onclick='getStudent('+pages.prev+')')
                    i.fas.fa-angle-double-left
            if pages
                each page in pages.pages
                    if(page==currentPage)
                        button#paginateActive.btn.page-item(onclick='getStudent('+page+')') #{page}
                    else
                        button.btn.page-item(onclick='getStudent('+page+')') #{page}
                        
            if  currentPage < pageCount
                button.btn.page-item(onclick='getStudent('+pages.next+')')
                    i.fas.fa-angle-double-right
        else
            if  currentPage>1
                button.btn.page-item(onclick='searchStudent('+pages.prev+')')
                    i.fas.fa-angle-double-left
            if pages
                each page in pages.pages
                    if(page==currentPage)
                        button#paginateActive.btn.page-item(onclick='searchStudent('+page+')') #{page}
                    else
                        button.btn.page-item(onclick='searchStudent('+page+')') #{page}
                        
            if  currentPage < pageCount
                button.btn.page-item(onclick='searchStudent('+pages.next+')')
                    i.fas.fa-angle-double-right