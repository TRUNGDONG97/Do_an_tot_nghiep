#editSubjectModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='EditClassTitle' aria-hidden='true')
    .modal-dialog.modal-lg
        .modal-content(style='color: #007bff')
            .modal-header(style='background-color: #d8061a')
                h5.modal-title(style='color: white;')
                    i.far.fa-edit(aria-hidden='false')
                    |   Sửa môn học
                button.close(type='button' data-dismiss='modal' aria-label='Close' style='color: white;' )
                    span(aria-hidden='true') &times;
            .modal-body(style='margin-bottom:20px;background-color: #f3f5f9;')
                .row(style='margin-bottom:20px;')
                    mixin propEditClass(id,title,type,value)
                        .row(style='margin-top:20px;')
                            label.col-md-6.col-sm-6.col-6(style='padding-top:6px;padding-right:10px;') #{title}:
                            .col-md-6.col-sm-6.col-6(style='margin-bottom:20px;')
                                input.form-control(type=type id=id maxlength="50" value=value )   
                    .col-md-7.col-sm-7.col-7
                        +propEditClass('txtEditSubjectName','Tên môn hoc','text',subject.subject_name)
                        +propEditClass('txtEditSubjectCode','Mã môn học','text',subject.subject_code)
                        +propEditClass('txtEditTime','Thời lượng','text',subject.time)
                    .col-md-5.col-sm-5.col-5
                        +propEditClass('txtEditCreditHour','Tín chỉ','number',subject.credit_hour)
                        +propEditClass('txtEditCoefficient','Tín chỉ học phí','number',subject.coefficient)
            .modal-footer
                button.btn.btn-secondary(type='button' data-dismiss='modal') Đóng
                button.btn.btn-danger(type='button' onclick='saveSubject('+subject.id+')') Lưu
